# Tests
BuildRequires:  golang(github.com/gobuffalo/packr/v2)
BuildRequires:  golang(gopkg.in/check.v1)
%endif

%description
%{common_description}

%gopkg

%prep
%goprep

%build
for cmd in sql-migrate; do
  %gobuild -o %{gobuilddir}/bin/$(basename $cmd) %{goipath}/$cmd
done

%install
%gopkginstall
install -m 0755 -vd                     %{buildroot}%{_bindir}
install -m 0755 -vp %{gobuilddir}/bin/* %{buildroot}%{_bindir}/

%if %{with check}
%check
# Fails with "too many levels of symbolic links" when run in mock
rm migrate_test.go
%gocheck
%endif

%files
%license LICENSE
%doc README.md
